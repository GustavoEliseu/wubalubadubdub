<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.gustavo.wubalubadubdub.ui.viewmodel.CharacterListViewModel" />
    </data>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
     android:layout_height="match_parent"
    android:weightSum="10"
    android:layout_width="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/characterListRecyclerView"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:spanCount="2"
        android:name="com.gustavo.wubalubadubdub.CharacterItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.fragments.characters.CharacterListFragment"
        tools:listitem="@layout/character_item" />
</androidx.appcompat.widget.LinearLayoutCompat>
</layout>